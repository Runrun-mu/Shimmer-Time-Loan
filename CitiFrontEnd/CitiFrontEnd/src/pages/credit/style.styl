.credit-page
  display flex
  flex-direction column
  box-sizing border-box
  width 100%
  background-color transparent
  height 100vh

  &-header
    flex 1
    display flex
    align-items center
    justify-content center

    &-title
      margin-top 2%
      text-align center
      color white
      font-size 50px
      font-weight bold

  &-body
    //padding-bottom 40%
    flex 4

.credit-form
  &-container
    margin-top 8%
    margin-left 5%
    margin-right 5%
    padding-top 4%
    padding-left 6%
    padding-right 6%
    padding-bottom 5%
    box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.2), 0 4px 16px 0 rgba(0, 0, 0, 0.19)
    border-radius 20px
    elevation 3

  &-sub-container
    width 100%
    display flex
    flex-direction row

  &-icon
    flex 1
    color #BFBABA

  &-brief
    flex 9
    font-size 32px
    font-weight 600

  &-title
    font-size 28px
    font-weight 200
    padding-top 2%

  &-divider
    width auto

  &-credit-brief
    font-size 25px
    font-weight 350
    flex 9

  &-credit-value
    margin-top 5%
    margin-bottom 3%
    text-align center
    //font-family "Helvetica Neue"
    font-size xxx-large
    font-weight bold
    color #262E49

  &-function
    margin-top 18%
    width 100%
    box-sizing border-box
    display flex
    flex-direction row
    height auto

    &-container
      flex 1

    &-icon
      display block
      margin-left auto
      margin-right auto
      width 60px
      height 60px

    &-title
      margin-top 5%
      text-align center
      font-size 20px
      color #262E49

.credit-button
  margin-top 5%
  background-color transparent
  width 90%
  font-weight bold
  color white

.credit-additional
  height 35%
  padding 3%
  display flex
  flex-direction row

  &-container
    display inline-block
    flex 1
    width auto
    height auto
    padding 2%
    margin 3%
    box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.2), 0 4px 16px 0 rgba(0, 0, 0, 0.19)
    border-radius 20px
    elevation 3

  &-image
    display block
    width auto
    height 100%



