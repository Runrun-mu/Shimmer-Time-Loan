.login-page
  display flex
  flex-direction column
  box-sizing border-box
  width 100%
  background-color transparent
  height 100vh

  &-header
    display flex
    box-sizing border-box
    flex-direction row
    flex 3
    align-items flex-end

  &-body
    display flex
    box-sizing border-box
    flex-direction column
    flex: 7
    padding-top 10%

.login-form
  &-brief
    padding-top: 5%
    padding-left: 5%
    font-size: 60px
    font-weight: 900
    line-height: 36px

  &-title
    font-size: 30px
    font-weight: 200
    padding-top: 5%
    padding-left: 5%

.login-button
  margin-top: 35%
  background-color: transparent
  width: 30%
  color: #ffffff
